<div class="container enemy-page">

    <div class="mission-box char-div">
        <form class="enemy-select-form">
            <h2>Fight Pits</h2>
            <div class="form-group input1">
                <label for="character-select">Character select</label>
                <select class="form-control" id="char-select" name="char-select">

                    {{#each characters}}
                    <option value='{{id}}'>{{name}} ({{race}} {{class}})</option>
                    {{/each}}
                </select>
                <button type="button" class="btn btn-warning next">Next</button>
            </div>


            <div class="form-group input2">
                <label for="enemy-select">Enemy select</label>
                <select class="form-control" id="enemy-select" name="enemy-select">

                    {{#each enemies}}
                    <option value='{{id}}'>{{name}} ({{race}})</option>
                    {{/each}}
                </select>
                <button type="button" class="btn btn-warning hide-enemy-select">Enemy Now</button>
            </div>
        </form>
    </div>

    <div class="fight char-div">
        <div class="row">
            <div class="col-sm-6">
                <h4 class="character-name" data-id="x"></h4>
                <div class="progress">
                    <div class="progress-bar bg-danger character-health" role="progressbar" style="width: 100%"
                        aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
            <div class="col-sm-6">
                <h4 class="enemy-name" data-id="y"></h4>
                <div class="progress">
                    <div class="progress-bar bg-danger enemy-health" role="progressbar" style="width: 100%"
                        aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
            <button type="button" class="btn btn-danger attack">Attack Enemy</button>
            <button type="button" class="btn btn-warning flee">Flee</button>
        </div>
    </div>


</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script src="/js/fightpits.js"></script>

